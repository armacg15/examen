<!-- views/detalle.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Alumno</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .card {
            margin-top: 50px;
        }
        
        .btn-back {
            margin-top: 20px;
        }
        
        h1,
        h5 {
            color: #343a40;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h1 class="text-center">Detalles del Alumno</h1>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4"><strong>Información del Alumno</strong></h5>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Número de Control:</strong>
                                <%= alumno.NC %>
                            </li>
                            <li class="list-group-item"><strong>Nombre:</strong>
                                <%= alumno.Nombre %>
                            </li>
                            <li class="list-group-item"><strong>Apellido Paterno:</strong>
                                <%= alumno.App %>
                            </li>
                            <li class="list-group-item"><strong>Apellido Materno:</strong>
                                <%= alumno.Apm %>
                            </li>
                            <li class="list-group-item"><strong>ID de Grupo:</strong>
                                <%= alumno.IDGrupo %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
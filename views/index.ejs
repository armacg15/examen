<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Alumnos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <% } %>
                <h1>Lista de Alumnos</h1>

                <!-- Botón para cerrar sesión en la esquina superior derecha -->
                <div class="position-absolute top-0 end-0 p-3">
                    <a href="/logout" class="btn btn-danger">Cerrar Sesión</a>
                </div>

                <!-- Botones para añadir y modificar alumnos -->
                <div class="mb-3">
                    <a href="/alumnos/nuevo" class="btn btn-success">Añadir Alumno</a>
                    <a href="/alumnos/modificar" class="btn btn-primary">Modificar Alumnos</a>
                </div>

                <!-- Tabla de alumnos sin opciones de modificación -->
                <h2>Listado de Alumnos</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Número de Control</th>
                            <th>Nombre</th>
                            <th>Apellido Paterno</th>
                            <th>Apellido Materno</th>
                            <th>ID de Grupo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% alumnos.forEach(alumno => { %>
                            <tr>
                                <td>
                                    <%= alumno.NC %>
                                </td>
                                <td>
                                    <%= alumno.Nombre %>
                                </td>
                                <td>
                                    <%= alumno.App %>
                                </td>
                                <td>
                                    <%= alumno.Apm %>
                                </td>
                                <td>
                                    <%= alumno.IDGrupo %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
    </div>
</body>

</html>